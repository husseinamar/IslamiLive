{
  "name": "islamilive",
  "version": "1.0.0",
  "description": "A tool to help create subtitles and PDF presentations for Quranic verses and dua supplications for live streams and events",
  "main": "src/app.ts",
  "scripts": {
    "add-migration-n": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "add-migration": "ts-node ./node_modules/typeorm/cli.js migration:generate -d ./src/loaders/typeormLoader.ts",
    "revert-migration": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "update-database": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tailwind": "postcss ./public/css/tailwind.css -o public/css/style.css --minify --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/themodestdeveloper/IslamiLive.git"
  },
  "keywords": [
    "Islam",
    "Livestream",
    "Quran",
    "Dua",
    "Supplication",
    "PDF",
    "Powerpoint",
    "Script",
    "Subtitles"
  ],
  "author": "themodestdeveloper",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/themodestdeveloper/IslamiLive/issues"
  },
  "homepage": "https://github.com/themodestdeveloper/IslamiLive#readme",
  "nodemonConfig": {
    "ignore": [
      "public/files/*"
    ]
  },
  "dependencies": {
    "@types/puppeteer": "^5.4.5",
    "axios": "^1.3.4",
    "body-parser": "^1.19.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.9",
    "express": "^4.17.3",
    "jsdom": "^19.0.0",
    "mongodb": "^5.9.2",
    "mysql": "^2.18.1",
    "node-tesseract-ocr": "^2.2.1",
    "pdfkit": "^0.13.0",
    "puppeteer": "^13.5.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.17",
    "typeorm-typedi-extensions": "^0.4.1",
    "xml-js": "^1.6.11",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.13",
    "@types/jsdom": "^16.2.14",
    "@types/lusca": "^1.7.1",
    "@types/xml2js": "^0.4.11",
    "autoprefixer": "^10.4.13",
    "lusca": "^1.7.0",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
