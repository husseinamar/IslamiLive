{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2019.symbol",
            "esnext.asynciterable"
        ],
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules"
    ],
    "outDir": "./build", 
    "rootDirs": ["./src"],
}