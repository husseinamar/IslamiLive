{
  "name": "islamilive",
  "version": "1.0.0",
  "description": "A tool to help create subtitles and PDF presentations for Quranic verses and dua supplications for live streams and events",
  "main": "src/app.ts",
  "scripts": {
    "add-migration": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "revert-migration": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "update-database": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/themodestdeveloper/IslamiLive.git"
  },
  "keywords": [
    "Islam",
    "Livestream",
    "Quran",
    "Dua",
    "Supplication",
    "PDF",
    "Powerpoint",
    "Script",
    "Subtitles"
  ],
  "author": "themodestdeveloper",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/themodestdeveloper/IslamiLive/issues"
  },
  "homepage": "https://github.com/themodestdeveloper/IslamiLive#readme",
  "nodemonConfig": {
    "ignore": [
      "public/files/*"
    ]
  },
  "dependencies": {
    "@types/puppeteer": "^5.4.5",
    "body-parser": "^1.19.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "mysql": "^2.18.1",
    "node-tesseract-ocr": "^2.2.1",
    "pdfkit": "^0.13.0",
    "puppeteer": "^13.5.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.43",
    "typeorm-typedi-extensions": "^0.4.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/lusca": "^1.7.1",
    "lusca": "^1.7.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
